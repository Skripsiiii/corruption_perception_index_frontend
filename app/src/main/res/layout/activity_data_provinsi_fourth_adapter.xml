<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".src.adapter.dataProvinsiFourthAdapter"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Indikator"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CPI"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/dimensiTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Indikator Harapan Anda dalam Mencegah dan Memberantas Korupsi"/>

        <LinearLayout
            android:id="@+id/statusBarText"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/borderindikator"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20/100"
                android:textSize="10dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp">
            <LinearLayout
                android:id="@+id/statusWarnaCPI"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:background="@drawable/backgroundindikator"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/statusCPI"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aman"
                    android:textSize="10dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>