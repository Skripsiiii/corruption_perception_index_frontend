<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/iconprofilenav" />

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"/>

        <TextView
            android:id="@+id/emailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="john.doe@gmai.com"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Edit Profile" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_background"
                android:drawablePadding="10dp"
                android:ems="10"
                android:text="John Doe"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="@color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kata Sandi Saat ini"/>

            <EditText
                android:id="@+id/passEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_background"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="kata sandi saat ini"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kata Sandi Baru"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/newPassEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_background"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="kata sandi baru"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="@color/gray"
                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Konfirmasi Kata Sandi"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/cinfirmPassEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_background"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="kata sandi baru"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="@color/gray"
                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnSavePass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/backgroundhome"
        android:backgroundTint="@color/gray"
        android:text="SIMPAN"
        android:textColor="@color/white" />

</LinearLayout>
