<!-- res/layout/activity_data_provinsi_adapter.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".src.adapter.dataProvinsiAdapter"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Provinsi"/>

            <TextView
                android:id="@+id/namaProvinsi"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="Kepulauan Bangka Belitung"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Status"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/statusBar"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/statusWarnaText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Status Warna"
                        android:textSize="10dp"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Skor CPI"/>

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="20dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:progress="17"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_custom" />

                <TextView
                    android:id="@+id/statusPointText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="16.7/100"
                    android:textColor="@android:color/black" />
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/next"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"/>

    </LinearLayout>
</LinearLayout>
