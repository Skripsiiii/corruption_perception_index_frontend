<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question1"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sangat Tidak Setuju"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sangat Setuju"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/selected1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom1"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom2"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom3"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="3"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom4"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="4"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom5"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="5"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom6"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="6"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom7"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="7"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected8"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom8"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="8"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected9"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom9"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="9"
                android:textAlignment="center"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/selected10"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/radio_button_custom10"
                android:button="@null"
                android:layout_margin="5dp"
                android:text="10"
                android:textAlignment="center"
                android:textSize="10sp" />


        </RadioGroup>


    </LinearLayout>



</LinearLayout>